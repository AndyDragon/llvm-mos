# RUN: llc -mtriple=mos -run-pass=prologepilog -verify-machineinstrs -o - %s | FileCheck %s
---
name: stack
# CHECK-LABEL: name: stack
stack:
  - { id: 0, size: 2 }
body:             |
  bb.0.entry:
    STstk $a, %stack.0, 0, implicit-def $y, implicit-def $nz :: (store 1 into %stack.0)
    $a = LDstk %stack.0, 1, implicit-def $y, implicit-def $nz :: (load 1 from %stack.0 + 1)
    RTS
# CHECK-LABEL: bb.0.entry:
# CHECK-NEXT:  IncSP -2
# CHECK-NEXT:  STstk $a, $rs0, 0, implicit-def $y, implicit-def $nz :: (store 1 into %stack.0)
# CHECK-NEXT:  $a = LDstk $rs0, 1, implicit-def $y, implicit-def $nz :: (load 1 from %stack.0 + 1)
# CHECK-NEXT:  IncSP 2
# CHECK-NEXT:  RTS
...
---
name: ptr
# CHECK-LABEL: name: ptr
stack:
  - { id: 0, size: 4 }
body: |
  bb.0.entry:
    STstk $rs0, %stack.0, 0, implicit-def $y, implicit-def $nz :: (store 2 into %stack.0)
    $rs0 = LDstk %stack.0, 2, implicit-def $y, implicit-def $nz :: (load 2 from %stack.0 + 2)
    RTS
# CHECK-LABEL: bb.0.entry:
# CHECK-NEXT:  IncSP -4
# CHECK-NEXT:  STstk $rs0, $rs0, 0
# CHECK-NEXT:  $rs0 = LDstk $rs0, 2
# CHECK-NEXT:  IncSP 4
# CHECK-NEXT:  RTS
...
