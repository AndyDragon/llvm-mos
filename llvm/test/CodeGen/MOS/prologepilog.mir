# RUN: llc -mtriple=mos -run-pass=prologepilog -verify-machineinstrs -o - %s | FileCheck %s
---
name: addrlostk
# CHECK-LABEL: name: addrlostk
stack:
  - { id: 0, size: 256 }
  - { id: 1, size: 2 }
body: |
  bb.0.entry:
    $rc2, $c = AddrLostk %stack.1, 1, implicit-def $nz
# CHECK:      $c = LDCimm 0
# CHECK-NEXT: $a = COPY $rc0
# CHECK-NEXT: $a, $c = ADCimm $a, 1, $c
# CHECK-NEXT: $rc2 = COPY killed $
...
---
name: addrlostk_0
# CHECK-LABEL: name: addrlostk_0
stack:
  - { id: 0, size: 256 }
  - { id: 1, size: 2 }
body: |
  bb.0.entry:
    $rc2, $c = AddrLostk %stack.1, 0, implicit-def $nz
# CHECK:      $c = LDCimm 0
# CHECK-NEXT: $rc2 = COPY $rc0
...
---
name: addrhistk
# CHECK-LABEL: name: addrhistk
stack:
  - { id: 0, size: 256 }
  - { id: 1, size: 2 }
body: |
  bb.0.entry:
    $rc3 = AddrHistk %stack.0, 255, $c, implicit-def $nz, implicit-def $c
# CHECK:      $a = COPY $rc1
# CHECK-NEXT: $a, dead $c = ADCimm $a, 1, $c
# CHECK-NEXT: $rc3 = COPY killed $a
...
---
name: addrhistk_0
# CHECK-LABEL: name: addrhistk_0
stack:
  - { id: 0, size: 256 }
  - { id: 1, size: 2 }
body: |
  bb.0.entry:
    $rc3 = AddrHistk %stack.1, 0, $c, implicit-def $nz, implicit-def $c
# CHECK: $rc3 = COPY $rc1
...
---
name: ld_byte
# CHECK-LABEL: name: ld_byte
stack:
  - { id: 0, size: 1 }
  - { id: 1, size: 2 }
body:             |
  bb.0.entry:
    $a = LDstk %stack.1, 1, implicit-def $nz :: (load 1 from %stack.1 + 1)
    RTS
# CHECK-LABEL: bb.0.entry:
# CHECK-NEXT:  IncSP -3
# CHECK-NEXT:  $y = LDimm 1, implicit-def $nz
# CHECK-NEXT:  $a = LDyindir $rs0, killed $y, implicit-def $nz
# CHECK-NEXT:  IncSP 3
# CHECK-NEXT:  RTS
...
---
